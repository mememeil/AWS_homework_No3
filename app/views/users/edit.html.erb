<div class="container">
  <h1>編集画面です</h1>

  <%= form_tag("/user/"+@user.id.to_s,:method=>:patch) do%>
    <div class="form-group">
      <%= label_tag "form_name", "名前" %>
      <%= text_field :user, :name, id: "form_name", value: @user.name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "form_age", "年齢" %>
      <%= text_field :user, :age, id: "form_age", value: @user.age, class: "form-control" %>
    </div>
    <%= submit_tag "変更", class: "btn btn-warning" %>
  <% end %>
</div>